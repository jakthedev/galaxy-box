<h1>{{section.settings.heading}}</h1> 

{% comment %} <h3>{{section.settings.question}}</h3> 

<p>{{section.settings.answer}}</p>  {% endcomment %}

{% for block in section.blocks %}  
    {% if block.type == "QA" %}
        <h3>{{block.settings.question}}</h3> 
        <p>{{block.settings.answer}}</p>  
    {% elsif block.type == "headline" %} 
        <h1>{{block.settings.title}}</h1> 
    {% endif %}
{% endfor %}

{% schema %} 
{
    "name": "customer questions", 
    "settings":[
        {
            "type": "text", 
            "label": "heading for faq", 
            "id": "heading"
        }, 
        {
            "type": "text", 
            "label": "customer questions", 
            "id": "question"
        }, 
        {
            "type": "textarea", 
            "label": "answer for faq", 
            "id": "answer"
        } 
    ], 
    "blocks": [ 
        {
            "type":"QA", 
            "name":"Question/Answer", 
            "settings": [
                {
                "type": "text", 
                "label": "title (internal only)", 
                "id": "title"
                }, 
                {
                "type": "text", 
                "label": "customer questions", 
                "id": "question"
                }, 
                {
                "type": "textarea", 
                "label": "answer for faq", 
                "id": "answer"
                }
            ]
        }, 
        {
            "type":"headline", 
            "name":"headline", 
            "settings": [
                {
                     
                    "type":"text", 
                    "label":"headline", 
                    "id":"headline"
                }
            ]
        }
    ]
}
{% endschema %}